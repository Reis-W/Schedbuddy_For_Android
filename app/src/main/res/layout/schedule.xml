<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/scheduleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="Schedule Recommendations:"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="34sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/languageOfWorld"
            android:layout_width="375dp"
            android:layout_height="78dp"
            android:backgroundTint="#EF3939"
            android:text="Language"
            android:textSize="34sp"/>

        <Button
            android:id="@+id/historyButton"
            android:layout_width="375dp"
            android:layout_height="78dp"
            android:backgroundTint="#EF3939"
            android:text="History"
            android:textSize="34sp"/>

        <Button
            android:id="@+id/english"
            android:layout_width="375dp"
            android:layout_height="78dp"
            android:backgroundTint="#EF3939"
            android:text="English 9"
            android:textSize="34sp"/>

        <Button
            android:id="@+id/mathematics"
            android:layout_width="375dp"
            android:layout_height="78dp"
            android:backgroundTint="#EF3939"
            android:text="Math"
            android:textSize="34sp"/>

        <Button
            android:id="@+id/biology"
            android:layout_width="375dp"
            android:layout_height="78dp"
            android:backgroundTint="#EF3939"
            android:text="Biology"
            android:textSize="34sp"/>

        <Button
            android:id="@+id/electives"
            android:layout_width="375dp"
            android:layout_height="78dp"
            android:backgroundTint="#EF3939"
            android:text=""
            android:textSize="34sp"/>

        <Button
            android:id="@+id/nutrition"
            android:layout_width="375dp"
            android:layout_height="78dp"
            android:backgroundTint="#EF3939"
            android:text=""
            android:textSize="34sp"
            android:visibility="visible"/>

        <Button
            android:id="@+id/music"
            android:layout_width="378dp"
            android:layout_height="72dp"
            android:backgroundTint="#EF3939"
            android:text=""
            android:textSize="34sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/studyHall"
            android:layout_width="378dp"
            android:layout_height="72dp"
            android:backgroundTint="#EF3939"
            android:text=""
            android:textSize="34sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/FillerButton1"
            android:layout_width="378dp"
            android:layout_height="72dp"
            android:text="h"
            android:visibility="invisible" />

        <Button
            android:id="@+id/fillerButton2"
            android:layout_width="378dp"
            android:layout_height="72dp"
            android:text="h"
            android:visibility="invisible" />

    </LinearLayout>
    </ScrollView>